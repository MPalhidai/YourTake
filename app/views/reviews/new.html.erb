<div class="row justify-content-center py-5">
  <div class="col-lg-8 col-md-10">
    <%= form_for @review do |f| %>

    <div class="field py-2">
      <h2><%= @review.movie.title %></h2>
    </div>

    <div class="field py-2">
      <%= f.label :comment, "Tell everyone your thoughts: " %>
      <br/>
      <%= f.text_area(:comment, size: "16x4", class: 'form-control', placeholder: "This movie was amazing!!!") %>
    </div>

    <div class="field py-2">
      <%= f.label :rating, "What would you rate this movie (0-100): " %>
      <br/>
      <%= f.number_field(:rating) %>
    </div>

    <div class="actions py-2">
      <%= f.submit "Post Review", class: "form-control btn btn-success" %>
    </div>

    <% end %>
  </div>
</div>
