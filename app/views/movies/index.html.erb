<section id="movies">
  <div class="row justify-content-center py-3">
    <div class="col-lg-10 col-md-11">
      <div class="row py-3">
        <div class="col">
          <span>Sort By: </span>
          <div class="btn-group" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-outline-secondary">Title</button>
            <button type="button" class="btn btn-outline-secondary">Release Date</button>
            <button type="button" class="btn btn-outline-secondary">Genre</button>
            <!-- place holder buttons -->
          </div>
        </div>
      </div>
      <div class="row justify-content-between">
        <div class="col-8">
          <%= render "movies/movie_card" %>
        </div>
        <div class="col-4">
          <%= render "movies/movie_side_panel" %>
        </div>
      </div>
    </div>
  </div>

</section>
