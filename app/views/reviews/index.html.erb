<div class="row justify-content-center py-5">
  <div class="col-lg-8 col-md-10">
    <h1>Recent Reviews</h1>
    <% @reviews.reverse.each do |review| %>
      <p><%= review.movie.title %></p>
      <p><%= review.movie.external_rating %></p>
      <p><%= review.user %></p>
      <p><%= review.rating %></p>
      <p><%= review.comment %></p>
      <hr>
    <% end %>
  </div>
</div>
