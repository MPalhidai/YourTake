<div class="row justify-content-around py-5">
  <div class="col-xl-4 col-lg-5">
    <h1>Most Reviewed Movies</h1>
    <hr>
    <% @movies.each do |movie| %>
    <div class="border rounded mb-3">
      <div class="row justify-content-between align-items-center py-3">
        <div class="col bigger">
          <%= link_to movie_path(movie.id) do %>
            <p class="m-0"><%= movie.title %></p>
          <% end %>
        </div>
        <div class="col text-right bigger">
          <span><%= movie.reviews.length %></span>
          <p class="stars-container stars-<%= movie.your_rating.to_s %> m-0">★★★★</p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="col-xl-4 col-lg-5">
    <h1>Newest Movies</h1>
    <hr>
    <% @newest.each do |movie| %>
    <div class="border rounded mb-3">
      <div class="row justify-content-between align-items-center py-3">
        <div class="col bigger">
          <%= link_to movie_path(movie.id) do %>
            <p class="m-0"><%= movie.title %></p>
          <% end %>
        </div>
        <div class="col text-right bigger">
          <span><%= movie.reviews.length %></span>
          <p class="stars-container stars-<%= movie.your_rating.to_s %> m-0">★★★★</p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
