<div class="row justify-content-center py-5">
  <div class="col-lg-6 col-md-8 col-sm-10">
    <h1>Recent Reviews</h1>
    <hr>
    <% @reviews.reverse.each do |review| %>
    <div class="border rounded mb-3 movie_card">
      <div class="row justify-content-between py-3">
        <div class="col-9 bigger">
          <%= link_to movie_path(review.movie.id) do %>
            <p class="mb-1"><%= review.movie.title %></p>
          <% end %>
          <p class="mb-1"><%= review.user.name %></p>
        </div>
        <div class="col-3 text-right bigger">
          <p class="stars-container stars-<%= review.rating.to_s %>">★★★★</p>
        </div>
      </div>
      <hr class="m-0">
      <div class="row py-3">
        <div class="col">
          <p class="mb-1"><%= review.comment %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
