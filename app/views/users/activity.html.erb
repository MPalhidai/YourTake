<div class="row justify-content-center py-5">
  <div class="col-lg-6 col-md-8 col-sm-10">
    <h1>Your Reviews</h1>
    <hr>
    <% @reviews.reverse.each do |review| %>
    <div class="border rounded mb-3 movie_card">
      <div class="row justify-content-between py-3">
        <div class="col">
          <p class="mb-1"><%= review.movie.title %></p>
          <p class="mb-1"><%= review.user.name %></p>
        </div>
        <div class="col text-right">
          <p class="mb-1 stars-container stars-<%= review.rating.to_s %>">★★★★</p>
          <% if review.user_id == current_user.id %>
          <p class="mb-1">
            <%= link_to review_path(review.id), method: :delete do %>
              <%= fa_icon "trash", text: "Delete Review" %>
            <% end %>
          </p>
          <% end %>
        </div>
      </div>
      <hr class="m-0">
      <div class="row py-3">
        <div class="col">
          <p class="mb-1"><%= review.comment %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
